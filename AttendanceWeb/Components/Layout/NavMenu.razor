@using AttendanceWeb.Services
@inject AuthService AuthService
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <span class="brand-icon">🎓</span>
            <div class="brand-text">
                <div class="brand-title">Attendance</div>
                <div class="brand-subtitle">Management System</div>
            </div>
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        @if (!AuthService.IsAdminAuthenticated)
        {
            <!-- Student Portal Menu -->
            <div class="nav-section-title">STUDENT PORTAL</div>
            
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="nav-icon">📅</span>
                    <span class="nav-label">Select Event</span>
                </NavLink>
            </div>

            <div class="nav-section-title">ADMIN ACCESS</div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/login">
                    <span class="nav-icon">🔐</span>
                    <span class="nav-label">Admin Login</span>
                </NavLink>
            </div>
        }
        else
        {
            <!-- Admin Portal Menu -->
            <div class="nav-section-title">ADMIN PORTAL</div>
            
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/dashboard">
                    <span class="nav-icon">⚙️</span>
                    <span class="nav-label">Dashboard</span>
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="home">
                    <span class="nav-icon">🏠</span>
                    <span class="nav-label">Admin Home</span>
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="enroll">
                    <span class="nav-icon">➕</span>
                    <span class="nav-label">Enroll Student</span>
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="records">
                    <span class="nav-icon">📊</span>
                    <span class="nav-label">All Records</span>
                </NavLink>
            </div>

            <div class="nav-section-title">STUDENT PORTAL</div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="">
                    <span class="nav-icon">📅</span>
                    <span class="nav-label">Event Selection</span>
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        AuthService.OnAuthStateChanged += StateHasChanged;
    }

    public void Dispose()
    {
        AuthService.OnAuthStateChanged -= StateHasChanged;
    }
}

