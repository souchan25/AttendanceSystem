@code {
    private string activeTab = "events";
    private List<Event> events = new();
    private List<Student> students = new();
    private List<Student> filteredStudents = new();
    private string studentSearch = "";
    private bool showEventForm = false;
    private Event eventForm = new();
    private Event? editingEvent = null;
    private int totalTemplates = 0;
    private int totalAttendance = 0;
    
    // Records Tab
    private List<AttendanceInfo> eventRecords = new();
    private int selectedEventId = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            events = await Task.Run(() => Database.GetAllEvents());
            students = await Task.Run(() => Database.GetAllStudents());
            filteredStudents = students;
            
            // Auto-select first event if none selected
            if (selectedEventId == 0 && events.Count > 0)
            {
                selectedEventId = events[0].Id;
                await LoadEventRecords(selectedEventId);
            }

            // Count total templates
            totalTemplates = 0;
            foreach (var student in students)
            {
                var templates = await Task.Run(() => Database.GetStudentTemplates(student.Id));
                totalTemplates += templates.Count;
            }

            // Count total attendance records
            totalAttendance = 0;
            foreach (var evt in events)
            {
                var attendance = await Task.Run(() => Database.GetEventAttendance(evt.Id));
                totalAttendance += attendance.Count;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
    }

    private async Task LoadEventRecords(int eventId)
    {
        try 
        {
            selectedEventId = eventId;
            eventRecords = await Task.Run(() => Database.GetEventAttendance(eventId));
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading records: {ex.Message}");
        }
    }


    private void ShowNewEventForm()
    {
        editingEvent = null;
        eventForm = new Event
        {
            EventDate = DateTime.Today,
            Period = "Midterm",
            AcademicYear = $"{DateTime.Now.Year}-{DateTime.Now.Year + 1}",
            IsActive = true
        };
        showEventForm = true;
    }

    private void EditEvent(Event evt)
    {
        editingEvent = evt;
        eventForm = new Event
        {
            EventName = evt.EventName,
            Description = evt.Description,
            EventDate = evt.EventDate,
            Period = evt.Period,
            AcademicYear = evt.AcademicYear,
            IsActive = evt.IsActive,
            TimeInStart = evt.TimeInStart,
            TimeInEnd = evt.TimeInEnd,
            TimeOutStart = evt.TimeOutStart,
            TimeOutEnd = evt.TimeOutEnd
        };
        showEventForm = true;
    }

    private void CancelEventForm()
    {
        showEventForm = false;
        editingEvent = null;
    }

    private async Task SaveEvent()
    {
        try
        {
            if (editingEvent == null)
            {
                await Task.Run(() => Database.AddEvent(eventForm));
            }
            else
            {
                eventForm.Id = editingEvent.Id;
                await Task.Run(() => Database.UpdateEvent(eventForm));
            }

            showEventForm = false;
            await LoadData();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving event: {ex.Message}");
        }
    }

    private async Task ToggleEventStatus(Event evt)
    {
        try
        {
            evt.IsActive = !evt.IsActive;
            await Task.Run(() => Database.UpdateEvent(evt));
            await LoadData();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error toggling event status: {ex.Message}");
        }
    }

    private async Task DeleteEvent(Event evt)
    {
        if (confirm($"Delete event '{evt.EventName}'?"))
        {
            try
            {
                await Task.Run(() => Database.DeleteEvent(evt.Id));
                await LoadData();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting event: {ex.Message}");
            }
        }
    }

    private async Task ToggleStudentStatus(Student student)
    {
        try
        {
            student.IsActive = !student.IsActive;
            await Task.Run(() => Database.UpdateStudent(student));
            await LoadData();
            FilterStudents();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error toggling student status: {ex.Message}");
        }
    }

    private async Task DeleteStudent(Student student)
    {
        if (confirm($"Delete student '{student.Name}'? This will also delete all fingerprint templates and attendance records."))
        {
            try
            {
                await Task.Run(() => Database.DeleteStudent(student.Id));
                await LoadData();
                FilterStudents();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting student: {ex.Message}");
            }
        }
    }

    private void FilterStudents()
    {
        if (string.IsNullOrWhiteSpace(studentSearch))
        {
            filteredStudents = students;
        }
        else
        {
            var query = studentSearch.ToLower();
            filteredStudents = students.Where(s =>
                s.Name.ToLower().Contains(query) ||
                s.StudentId.ToLower().Contains(query) ||
                s.Program.ToLower().Contains(query)
            ).ToList();
        }
    }

    private string GetInitials(string name)
    {
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[parts.Length - 1][0]}".ToUpper();
        return name.Length > 0 ? name.Substring(0, Math.Min(2, name.Length)).ToUpper() : "?";
    }

    private string GetTimeAgo(DateTime date)
    {
        var diff = DateTime.Now - date;
        if (diff.TotalMinutes < 1) return "Just now";
        if (diff.TotalHours < 1) return $"{(int)diff.TotalMinutes}m ago";
        if (diff.TotalDays < 1) return $"{(int)diff.TotalHours}h ago";
        if (diff.TotalDays < 30) return $"{(int)diff.TotalDays}d ago";
        return date.ToString("MMM dd, yyyy");
    }

    private bool confirm(string message)
    {
        // In a real app, use JavaScript interop for confirmation
        // For now, we'll just return true
        Console.WriteLine($"Confirm: {message}");
        return true;
    }

    private void Logout()
    {
        AuthService.Logout();
        Navigation.NavigateTo("/admin/login");
    }
