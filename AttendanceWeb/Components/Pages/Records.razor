@page "/records"
@using AttendanceWeb.Models
@using AttendanceWeb.Services
@inject AttendanceDatabase Database
@inject AuthService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Attendance Records</PageTitle>

@if (!AuthService.IsAdminAuthenticated)
{
    <div class="unauthorized-container">
        <div class="unauthorized-card">
            <div class="unauthorized-icon">üîí</div>
            <h2>Access Denied</h2>
            <p>You need to be logged in as an admin to view attendance records.</p>
            <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/admin/login")'>
                Go to Admin Login
            </button>
        </div>
    </div>
}
else
{
    <div class="page-container">
        <div class="content-card">
            <div class="page-header">
                <button class="btn-back" @onclick='() => Navigation.NavigateTo("/admin/dashboard")'>‚Üê Back</button>
                <h1>üìä Attendance Records</h1>
                <p>View attendance history and generate reports</p>
            </div>

        <!-- Filter Section -->
        <div class="filters">
            <div class="filter-group">
                <label>Event</label>
                <select @bind="selectedEventId" @bind:after="LoadRecords" class="form-control">
                    <option value="0">-- All Events --</option>
                    @{ var ongoingEvents = events.Where(e => !e.IsDeleted && e.IsActive).OrderByDescending(e => e.EventDate).ToList(); }
                    @{ var completedEvents = events.Where(e => !e.IsDeleted && !e.IsActive).OrderByDescending(e => e.EventDate).ToList(); }
                    @{ var archivedEvents = events.Where(e => e.IsDeleted).OrderByDescending(e => e.EventDate).ToList(); }
                    @if (ongoingEvents.Any())
                    {
                        <optgroup label="Ongoing">
                            @foreach (var evt in ongoingEvents)
                            {
                                <option value="@evt.Id">@evt.EventName (@evt.Period - @evt.AcademicYear)</option>
                            }
                        </optgroup>
                    }
                    @if (completedEvents.Any())
                    {
                        <optgroup label="Completed">
                            @foreach (var evt in completedEvents)
                            {
                                <option value="@evt.Id">@evt.EventName (@evt.Period - @evt.AcademicYear)</option>
                            }
                        </optgroup>
                    }
                    @if (archivedEvents.Any())
                    {
                        <optgroup label="Archived">
                            @foreach (var evt in archivedEvents)
                            {
                                <option value="@evt.Id">@evt.EventName (@evt.Period - @evt.AcademicYear)</option>
                            }
                        </optgroup>
                    }
                </select>
            </div>

            <div class="filter-group">
                <label>Search Student</label>
                <input type="text" @bind="searchQuery" @bind:after="FilterRecords" 
                       placeholder="Name or ID..." class="form-control" />
            </div>

            <button class="btn btn-refresh" @onclick="LoadRecords">üîÑ Refresh</button>
        </div>

        <!-- Summary Cards -->
        <div class="summary-cards">
            <div class="summary-card">
                <div class="card-icon">üë•</div>
                <div class="card-content">
                    <div class="card-value">@totalPresent</div>
                    <div class="card-label">Present</div>
                </div>
            </div>
            <div class="summary-card">
                <div class="card-icon">‚è∞</div>
                <div class="card-content">
                    <div class="card-value">@totalLate</div>
                    <div class="card-label">Late</div>
                </div>
            </div>
            <div class="summary-card">
                <div class="card-icon">‚ùå</div>
                <div class="card-content">
                    <div class="card-value">@totalAbsent</div>
                    <div class="card-label">Absent</div>
                </div>
            </div>
            <div class="summary-card">
                <div class="card-icon">üìà</div>
                <div class="card-content">
                    <div class="card-value">@attendanceRate%</div>
                    <div class="card-label">Rate</div>
                </div>
            </div>
        </div>

        <!-- Records Table -->
        <div class="records-section">
            <h3>Attendance Records (@filteredRecords.Count)</h3>
            
            @if (isLoading)
            {
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Loading records...</p>
                </div>
            }
            else if (filteredRecords.Count == 0)
            {
                <div class="no-records">
                    <div class="icon">üì≠</div>
                    <p>No attendance records found</p>
                </div>
            }
            else
            {
                <div class="table-container">
                    <table class="records-table">
                        <thead>
                            <tr>
                                <th>Student ID</th>
                                <th>Name</th>
                                <th>Section</th>
                                <th>Year</th>
                                <th>Event</th>
                                <th>Time In</th>
                                <th>Time Out</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in filteredRecords)
                            {
                                <tr>
                                    <td>@record.Student.StudentId</td>
                                    <td>@record.Student.Name</td>
                                    <td>@(record.Student.Section ?? "-")</td>
                                    <td>@(record.Student.YearLevel > 0 ? record.Student.YearLevel.ToString() : "-")</td>
                                    <td>@record.Event.EventName</td>
                                    <td>
                                        @if (record.Record.TimeIn.HasValue)
                                        {
                                            <span class="time">@record.Record.TimeIn.Value.ToString("hh:mm tt")</span>
                                        }
                                        else
                                        {
                                            <span class="no-time">--</span>
                                        }
                                    </td>
                                    <td>
                                        @if (record.Record.TimeOut.HasValue)
                                        {
                                            <span class="time">@record.Record.TimeOut.Value.ToString("hh:mm tt")</span>
                                        }
                                        else
                                        {
                                            <span class="no-time">--</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="status status-@record.Record.Status.ToLower()">
                                            @record.Record.Status
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
}

