@code {
    private List<Event> events = new();
    private List<AttendanceInfo> allRecords = new();
    private List<AttendanceInfo> filteredRecords = new();
    private int selectedEventId = 0;
    private string searchQuery = "";
    private bool isLoading = true;

    private int totalPresent = 0;
    private int totalLate = 0;
    private int totalAbsent = 0;
    private int attendanceRate = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadEvents();
        await LoadRecords();
    }

    private async Task LoadEvents()
    {
        try
        {
            events = await Task.Run(() => Database.GetAllEvents(true));
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading events: {ex.Message}");
        }
    }

    private async Task LoadRecords()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            if (selectedEventId > 0)
            {
                allRecords = await Task.Run(() => Database.GetEventAttendance(selectedEventId));
            }
            else
            {
                // Get all records from all events
                allRecords = new List<AttendanceInfo>();
                foreach (var evt in events)
                {
                    var records = await Task.Run(() => Database.GetEventAttendance(evt.Id));
                    allRecords.AddRange(records);
                }
            }

            FilterRecords();
            CalculateStatistics();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading records: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void FilterRecords()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredRecords = allRecords;
        }
        else
        {
            var query = searchQuery.ToLower();
            filteredRecords = allRecords.Where(r =>
                r.Student.Name.ToLower().Contains(query) ||
                r.Student.StudentId.ToLower().Contains(query)
            ).ToList();
        }

        CalculateStatistics();
    }

    private void CalculateStatistics()
    {
        totalPresent = filteredRecords.Count(r => r.Record.Status == "Present");
        totalLate = filteredRecords.Count(r => r.Record.Status == "Late");
        totalAbsent = filteredRecords.Count(r => r.Record.Status == "Absent");

        var total = filteredRecords.Count;
        attendanceRate = total > 0 ? (int)((totalPresent + totalLate) * 100.0 / total) : 0;
    }
}
