@page "/admin/login"
@using AttendanceWeb.Models
@using AttendanceWeb.Services
@inject AttendanceDatabase Database
@inject FingerprintApiClient ApiClient
@inject AuthService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Admin Login</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>üîê Admin Login</h1>
            <p>Authenticate with your fingerprint</p>
        </div>

        @if (admins.Count == 0)
        {
            <div class="alert alert-info">
                ‚ÑπÔ∏è No admin accounts found. Please register an admin first.
            </div>
            <button class="btn btn-primary btn-block" @onclick='() => Navigation.NavigateTo("/admin/register")'>
                Register First Admin
            </button>
            <div class="login-footer">
                <button class="btn btn-link" @onclick='() => Navigation.NavigateTo("/")'>
                    ‚Üê Back to Student Portal
                </button>
            </div>
        }
        else
        {
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-error">‚ö†Ô∏è @errorMessage</div>
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success">‚úì @successMessage</div>
            }

            <div class="fingerprint-section">
                <div class="fingerprint-icon">
                    <span style="font-size: 80px;">@(isCapturing ? "üëÜ" : "üñêÔ∏è")</span>
                </div>

                @if (isCapturing)
                {
                    <p class="status-text">Place your finger on the scanner...</p>
                    <div class="loading-spinner"></div>
                }
                else
                {
                    <button class="btn btn-primary btn-large" @onclick="StartCapture">
                        Scan Fingerprint
                    </button>
                }

                @if (capturedTemplate != null)
                {
                    <div class="fingerprint-preview">
                        <p>‚úì Fingerprint captured</p>
                        <p class="quality-text">Quality: @capturedTemplate.Quality%</p>
                    </div>
                }
            </div>

            @if (capturedTemplate != null)
            {
                <button class="btn btn-primary btn-block" @onclick="VerifyAdmin" disabled="@isVerifying">
                    @(isVerifying ? "Verifying..." : "Login")
                </button>
            }

            <div class="login-footer">
                <button class="btn btn-link" @onclick='() => Navigation.NavigateTo("/")'>
                    ‚Üê Back to Student Portal
                </button>
                @if (admins.Count > 0)
                {
                    <span class="separator">|</span>
                    <button class="btn btn-link" @onclick='() => Navigation.NavigateTo("/admin/register")'>
                        Add Admin
                    </button>
                }
            </div>
        }
    </div>
</div>

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 20px;
    }

    .login-card {
        background: white;
        border-radius: 20px;
        padding: 40px;
        max-width: 500px;
        width: 100%;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .login-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .login-header h1 {
        color: #333;
        margin-bottom: 10px;
    }

    .login-header p {
        color: #666;
    }

    .fingerprint-section {
        text-align: center;
        padding: 40px 20px;
        background: #f8f9fa;
        border-radius: 15px;
        margin-bottom: 20px;
    }

    .fingerprint-icon {
        margin-bottom: 20px;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    .status-text {
        color: #667eea;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .loading-spinner {
        border: 4px solid #f3f3f3;
        border-top: 4px solid #667eea;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
        margin: 0 auto;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .fingerprint-preview {
        margin-top: 20px;
        padding: 15px;
        background: white;
        border-radius: 10px;
    }

    .quality-text {
        color: #28a745;
        font-weight: 600;
    }

    .btn-large {
        padding: 15px 40px;
        font-size: 18px;
        font-weight: 600;
    }

    .btn-block {
        width: 100%;
        padding: 15px;
        font-size: 18px;
        font-weight: 600;
    }

    .login-footer {
        margin-top: 20px;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .separator {
        color: #ccc;
    }

    .btn-link {
        background: none;
        border: none;
        color: #667eea;
        cursor: pointer;
        text-decoration: none;
        padding: 10px;
    }

    .btn-link:hover {
        text-decoration: underline;
    }

    .alert {
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .alert-error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .alert-info {
        background-color: #d1ecf1;
        color: #0c5460;
        border: 1px solid #bee5eb;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
</style>

@code {
    private bool isCapturing = false;
    private bool isVerifying = false;
    private FingerprintTemplate? capturedTemplate;
    private string errorMessage = "";
    private string successMessage = "";
    private List<AttendanceWeb.Models.Admin> admins = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAdmins();
    }

    private async Task LoadAdmins()
    {
        admins = await Database.GetAllAdminsAsync();
    }

    private async Task StartCapture()
    {
        errorMessage = "";
        successMessage = "";
        isCapturing = true;
        capturedTemplate = null;

        try
        {
            var result = await ApiClient.CaptureAsync();

            if (result.Success && result.Template != null)
            {
                capturedTemplate = new FingerprintTemplate
                {
                    TemplateData = result.Template,
                    Quality = result.Quality
                };

                if (capturedTemplate.Quality < 30)
                {
                    errorMessage = "Poor fingerprint quality. Please try again.";
                    capturedTemplate = null;
                }
            }
            else
            {
                errorMessage = result.Error ?? result.Message ?? "Failed to capture fingerprint";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isCapturing = false;
        }
    }

    private async Task VerifyAdmin()
    {
        if (capturedTemplate == null) return;

        errorMessage = "";
        isVerifying = true;

        try
        {
            if (admins.Count == 0)
            {
                errorMessage = "No admin accounts found. Please register an admin first.";
                isVerifying = false;
                return;
            }

            // Try to match against all admin fingerprints
            foreach (var admin in admins)
            {
                var verifyResult = await ApiClient.CompareTemplatesAsync(
                    capturedTemplate.TemplateData,
                    admin.TemplateData
                );

                if (verifyResult.Success)
                {
                    // Login successful
                    AuthService.Login(admin.Username);
                    successMessage = $"Welcome, {admin.Name}!";
                    
                    await Task.Delay(1000);
                    Navigation.NavigateTo("/admin/dashboard");
                    return;
                }
            }

            // No match found
            errorMessage = "Fingerprint not recognized. Access denied.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Verification error: {ex.Message}";
        }
        finally
        {
            isVerifying = false;
        }
    }
}
