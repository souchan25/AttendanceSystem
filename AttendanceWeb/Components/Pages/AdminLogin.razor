@page "/admin/login"
@using AttendanceWeb.Models
@using AttendanceWeb.Services
@inject AttendanceDatabase Database
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Admin Login</PageTitle>

<div class="login-container">
    <button class="btn-fullscreen-login" @onclick="ToggleFullscreen" title="@(isFullscreen ? "Exit Fullscreen" : "Enter Fullscreen")">
        @(isFullscreen ? "üóó" : "‚õ∂")
    </button>
    
    <div class="login-card">
        <div class="login-header">
            <h1>üîê Admin Login</h1>
            <p>Enter your credentials</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-error">‚ö†Ô∏è @errorMessage</div>
        }

        <div class="form-group">
            <label>Username</label>
            <input class="form-control" @bind="username" placeholder="Enter username" />
        </div>
        
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" @bind="password" placeholder="Enter password" @onkeypress="HandleKeyPress" />
        </div>

        <button class="btn btn-primary btn-block" @onclick="LoginWithPassword" disabled="@isLoading">
            @(isLoading ? "Logging in..." : "Login")
        </button>
    </div>
</div>

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .login-card {
        background: white;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        width: 100%;
        max-width: 400px;
    }
    
    .login-header {
        text-align: center;
        margin-bottom: 2rem;
    }
    
    .login-header h1 {
        color: #2d3748;
        font-size: 1.8rem;
        margin-bottom: 0.5rem;
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        color: #4a5568;
        font-weight: 500;
    }
    
    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        font-size: 1rem;
        transition: border-color 0.2s;
    }
    
    .form-control:focus {
        border-color: #667eea;
        outline: none;
    }
    
    .btn-block {
        width: 100%;
        padding: 1rem;
        font-size: 1.1rem;
        margin-top: 1rem;
    }

    .alert {
        padding: 0.75rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }
    
    .alert-error {
        background-color: #fff5f5;
        color: #c53030;
        border: 1px solid #feb2b2;
    }

    .btn-fullscreen-login {
        position: absolute;
        top: 20px;
        right: 20px;
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.3);
        padding: 10px;
        width: 44px;
        height: 44px;
        border-radius: 10px;
        cursor: pointer;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        backdrop-filter: blur(5px);
        z-index: 10;
    }

    .btn-fullscreen-login:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: scale(1.05);
    }
</style>

@code {
    private string username = "";
    private string password = "";
    private string errorMessage = "";
    private bool isLoading = false;
    private bool isFullscreen = false;

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await LoginWithPassword();
        }
    }

    private async Task LoginWithPassword()
    {
        isLoading = true;
        errorMessage = "";
        
        try
        {
            var admins = await Database.GetAllAdminsAsync();
            var admin = admins.FirstOrDefault(a => a.Username.Equals(username, StringComparison.OrdinalIgnoreCase));
            
            if (admin != null)
            {
                if (admin.Password == password)
                {
                    AuthService.Login(admin.Username, admin.Id);
                    
                    // Persist session via localStorage
                    await JSRuntime.InvokeVoidAsync("localStorage.setItem", "adminUser", admin.Username);
                    await JSRuntime.InvokeVoidAsync("localStorage.setItem", "adminId", admin.Id.ToString());
                    
                    Navigation.NavigateTo("/admin/dashboard");
                }
                else
                {
                    errorMessage = "Invalid password.";
                }
            }
            else
            {
                // Fallback for initial setup if empty or default admin
                if (admins.Count == 0 && username == "admin" && password == "admin")
                {
                    AuthService.Login("admin", 0);
                    await JSRuntime.InvokeVoidAsync("localStorage.setItem", "adminUser", "admin");
                    await JSRuntime.InvokeVoidAsync("localStorage.setItem", "adminId", "0");
                    Navigation.NavigateTo("/admin/dashboard");
                }
                else
                {
                    errorMessage = "Invalid username or password.";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Login error: " + ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var savedUser = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "adminUser");
            var savedIdStr = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "adminId");
            if (!string.IsNullOrEmpty(savedUser))
            {
                int adminId = 0;
                int.TryParse(savedIdStr, out adminId);
                AuthService.Login(savedUser, adminId);
                Navigation.NavigateTo("/admin/dashboard");
            }
        }
    }

    private async Task ToggleFullscreen()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("toggleFullscreen");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Fullscreen error: {ex.Message}");
            errorMessage = "Fullscreen not supported. Press F11 key to enter fullscreen.";
            StateHasChanged();
            await Task.Delay(3000);
            errorMessage = "";
            StateHasChanged();
        }
    }
}