@page "/"
@page "/student"
@using AttendanceWeb.Models
@using AttendanceWeb.Services
@inject AttendanceDatabase Database
@inject FingerprintApiClient ApiClient
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Student Portal</PageTitle>

<div class="portal-container">
    <div class="portal-header">
        <div class="header-controls">
            <button class="btn-fullscreen" @onclick="ToggleFullscreen" title="@(isFullscreen ? "Exit Fullscreen" : "Enter Fullscreen")">
                @(isFullscreen ? "üóó" : "‚õ∂")
            </button>
            @if (isInitializing)
            {
                <span class="status-msg">üîÑ Initializing Scanner...</span>
            }
            else if (!string.IsNullOrEmpty(statusMessage))
            {
                <span class="status-msg">@statusMessage</span>
            }
        </div>
        <h1 class="portal-title">üéì Student Attendance Portal</h1>
        <p class="portal-subtitle">Select an event to check your attendance</p>
    </div>

    <div class="event-selection-card">
        <h2>Active Events</h2>
        
        @if (isLoading)
        {
            <div class="loading">
                <div class="spinner"></div>
                <p>Loading events...</p>
            </div>
        }
        else if (activeEvents.Count == 0)
        {
            <div class="empty-state">
                <div class="empty-icon">üìÖ</div>
                <h3>No Active Events</h3>
                <p>There are no events available for attendance at the moment.</p>
                <p class="hint">Please check back later or contact your administrator.</p>
            </div>
        }
        else
        {
            <div class="events-grid">
                @foreach (var evt in activeEvents)
                {
                    <div class="event-card" @onclick="() => SelectEvent(evt)">
                        <div class="event-header">
                            <div class="event-icon">üìÖ</div>
                            <div class="event-status">
                                <span class="status-dot active"></span>
                                Active
                            </div>
                        </div>
                        
                        <div class="event-content">
                            <h3>@evt.EventName</h3>
                            <p class="event-details">
                                <span class="detail-item">
                                    <span class="icon">üìñ</span>
                                    @evt.Period
                                </span>
                                <span class="detail-item">
                                    <span class="icon">üìÜ</span>
                                    @evt.AcademicYear
                                </span>
                            </p>
                            <p class="event-date">
                                <span class="icon">üóìÔ∏è</span>
                                @evt.EventDate.ToString("MMMM dd, yyyy")
                            </p>
                            
                            @if (!string.IsNullOrEmpty(evt.Description))
                            {
                                <p class="event-description">@evt.Description</p>
                            }

                            @if (evt.TimeInStart.HasValue || evt.TimeOutStart.HasValue)
                            {
                                <div class="time-info">
                                    @if (evt.TimeInStart.HasValue)
                                    {
                                        <div class="time-slot">
                                            <span class="time-label">‚¨áÔ∏è Time In:</span>
                                            <span class="time-range">@evt.TimeInStart - @evt.TimeInEnd</span>
                                        </div>
                                    }
                                    @if (evt.TimeOutStart.HasValue)
                                    {
                                        <div class="time-slot">
                                            <span class="time-label">‚¨ÜÔ∏è Time Out:</span>
                                            <span class="time-range">@evt.TimeOutStart - @evt.TimeOutEnd</span>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                        
                        <div class="event-footer">
                            <button class="btn-select">
                                Select Event ‚Üí
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <div class="info-section">
        <div class="info-card">
            <div class="info-icon">üëÜ</div>
            <div class="info-content">
                <h4>How to Check Attendance</h4>
                <ol>
                    <li>Select the event you want to attend</li>
                    <li>Place your finger on the scanner when prompted</li>
                    <li>Your attendance will be recorded automatically</li>
                    <li>You can view your records after checking in</li>
                </ol>
            </div>
        </div>
    </div>
</div>

